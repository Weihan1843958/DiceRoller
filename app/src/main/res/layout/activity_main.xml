<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonRoll"
        android:layout_width="227dp"
        android:layout_height="46dp"
        android:layout_marginBottom="32dp"
        android:text="I am feeling lucky"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/buttonPlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textDice"
        android:layout_width="329dp"
        android:layout_height="129dp"
        android:layout_marginBottom="24dp"
        android:gravity="center|clip_vertical|center_horizontal|center_vertical"
        android:text="3"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonRoll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/textGuess"
        android:layout_width="225dp"
        android:layout_height="54dp"
        android:ems="10"
        android:hint="Your guess"
        android:inputType="number"
        android:textSize="18sp"
        android:tooltipText="Your guess"
        app:layout_constraintBottom_toTopOf="@+id/textPoints"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.456"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.711" />

    <TextView
        android:id="@+id/textPoints"
        android:layout_width="210dp"
        android:layout_height="49dp"
        android:layout_marginBottom="48dp"
        android:ems="10"
        android:text="Points: 0"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textDice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonPlay"
        android:layout_width="226dp"
        android:layout_height="42dp"
        android:layout_marginBottom="28dp"
        android:text="Let's play D-ICEBREAKERS"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/buttonAdd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="227dp"
        android:layout_height="49dp"
        android:layout_marginBottom="52dp"
        android:text="Add a new D-icebreaker"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>